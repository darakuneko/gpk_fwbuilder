{
  "license": "MIT",
  "scripts": {
    "build": "rm -rf ./dist && rm -rf ./dist-electron && vite build",
    "build:win": "del /s /q dist && del /s /q dist-electron && vite build",
    "start": "vite build && npx electron dist-electron/index.js",
    "start:dev": "vite build && cross-env NODE_ENV=development npx electron dist-electron/index.js",
    "dev": "vite",
    "dist:win": "npm run build:win && electron-builder -w",
    "dist:mac": "npm run build && electron-builder -m",
    "dist:linux": "npm run build && electron-builder -l"
  },
  "name": "gpk_fwbuilder",
  "version": "0.11.5",
  "description": "GPK FWBuilder",
  "homepage": "https://github.com/darakuneko",
  "author": {
    "name": "darakuneko",
    "email": "tvkids@gmail.com"
  },
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@tailwindcss/vite": "^4.1.8",
    "@types/electron": "^1.4.38",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vitejs/plugin-react": "^4.5.1",
    "cross-env": "^7.0.3",
    "electron": "36.4.0",
    "electron-builder": "26.0.12",
    "eslint": "^9.28.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.29.0"
  },
  "main": "./dist-electron/index.js",
  "dependencies": {
    "@electron/notarize": "3.0.1",
    "ansi-to-html": "0.7.2",
    "axios": "^1.9.0",
    "dotenv": "16.5.0",
    "electron-store": "10.0.1",
    "flowbite": "^3.1.2",
    "flowbite-react": "^0.11.8",
    "form-data": "4.0.3",
    "html-react-parser": "5.2.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-icons": "^5.5.0"
  },
  "build": {
    "productName": "GPK FWBuilder",
    "appId": "app.darakuneko.gpk_fwbuilder",
    "afterSign": "notarize.cjs",
    "npmRebuild": false,
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "icons/*",
      "package.json"
    ],
    "extraResources": [
      "gpk_fwmaker/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icons/512x512.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "category": "public.app-category.productivity",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "icons"
    }
  }
}
