{
  "license": "MIT",
  "scripts": {
    "build": "rm -rf ./dist && rm -rf ./dist-electron && npm run check && vite build ",
    "build:win": "del /s /q dist && del /s /q dist-electron && npm run check && vite build",
    "start": "npm run build && npx electron dist-electron/index.js",
    "start:dev": "npm run build && cross-env NODE_ENV=development npx electron dist-electron/index.js",
    "start:linux": "ELECTRON_DISABLE_SANDBOX=1 npm run build && npx electron dist-electron/index.js",
    "start:linux:dev": "npm run build && ELECTRON_DISABLE_SANDBOX=1 cross-env NODE_ENV=development npx electron dist-electron/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "check": "npm run type-check && npm run lint",
    "upgrade": "npx npm-check-updates -u",
    "dist:win": "npm run build:win && electron-builder -w",
    "dist:mac": "npm run build && electron-builder -m",
    "dist:linux": "npm run build && electron-builder -l"
  },
  "name": "gpk_fwbuilder",
  "version": "1.0.2",
  "description": "GPK FWBuilder",
  "homepage": "https://github.com/darakuneko",
  "author": {
    "name": "darakuneko",
    "email": "tvkids@gmail.com"
  },
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/vite": "^4.1.18",
    "@types/electron": "^1.6.12",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitejs/plugin-react": "^5.1.2",
    "cross-env": "^10.1.0",
    "electron": "39.2.7",
    "electron-builder": "26.0.12",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^17.0.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-electron": "^0.29.0"
  },
  "main": "./dist-electron/index.js",
  "dependencies": {
    "@electron/notarize": "3.1.1",
    "ansi-to-html": "0.7.2",
    "axios": "^1.13.2",
    "dotenv": "17.2.3",
    "electron-store": "11.0.2",
    "flowbite": "^4.0.1",
    "flowbite-react": "^0.12.15",
    "form-data": "4.0.5",
    "html-react-parser": "5.2.11",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-icons": "^5.5.0"
  },
  "build": {
    "productName": "GPK FWBuilder",
    "appId": "app.darakuneko.gpk_fwbuilder",
    "npmRebuild": false,
    "afterSign": "dist-electron/notarize.cjs",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "icons/*",
      "package.json"
    ],
    "extraResources": [
      "gpk_fwmaker/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icons/512x512.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "category": "public.app-category.productivity",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "icons"
    }
  }
}
