{
  "license": "MIT",
  "scripts": {
    "build": "rm -rf ./public/build && rm -rf ./build && rm -rf ./dist && npx webpack",
    "build:win": "del /s /q public\\build && del /s /q build && del /s /q dist && npx webpack",
    "start": "npx webpack && npx electron index.js",
    "dist:win": "npm run build:win && electron-builder -w",
    "dist:mac": "npm run build && electron-builder -m",
    "dist:linux": "npm run build && electron-builder -l"
  },
  "name": "gpk_fwbuilder",
  "version": "0.11.4",
  "description": "GPK FWBuilder",
  "homepage": "https://github.com/darakuneko",
  "author": {
    "name": "darakuneko",
    "email": "tvkids@gmail.com"
  },
  "type": "module",
  "devDependencies": {
    "electron": "33.2.0",
    "electron-builder": "25.1.8",
    "webpack-cli": "5.1.4"
  },
  "main": "./index.js",
  "dependencies": {
    "@babel/core": "7.26.0",
    "@babel/preset-env": "7.26.0",
    "@babel/preset-react": "7.25.9",
    "@electron/notarize": "2.5.0",
    "@emotion/babel-preset-css-prop": "11.12.0",
    "@emotion/react": "11.13.5",
    "@emotion/styled": "11.13.5",
    "@mui/icons-material": "6.1.8",
    "@mui/material": "6.1.8",
    "ansi-to-html": "0.7.2",
    "axios": "1.7.8",
    "babel-loader": "9.2.1",
    "dotenv": "16.4.5",
    "electron-store": "10.0.0",
    "form-data": "4.0.1",
    "html-react-parser": "5.1.18",
    "node-loader": "2.1.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "webpack": "5.96.1"
  },
  "build": {
    "productName": "GPK FWBuilder",
    "appId": "app.darakuneko.gpk_fwbuilder",
    "afterSign": "notarize.cjs",
    "npmRebuild": false,
    "files": [
      "public/**/*",
      "icons/*",
      "index.js",
      "preload.js",
      "command.js",
      "package.json"
    ],
    "extraResources": [
      "gpk_fwmaker/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icons/512x512.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "category": "public.app-category.productivity",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "icons"
    }
  }
}
