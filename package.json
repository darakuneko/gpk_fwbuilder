{
  "license": "MIT",
  "scripts": {
    "build": "rm -rf ./dist && rm -rf ./dist-electron && vite build",
    "build:win": "del /s /q dist && del /s /q dist-electron && vite build",
    "start": "cross-env NODE_ENV=production vite build && npx electron dist-electron/index.js",
    "start:dev": "cross-env NODE_ENV=development vite build && npx electron dist-electron/index.js",
    "dev": "vite",
    "dist:win": "npm run build:win && electron-builder -w",
    "dist:mac": "npm run build && electron-builder -m",
    "dist:linux": "npm run build && electron-builder -l"
  },
  "name": "gpk_fwbuilder",
  "version": "0.11.5",
  "description": "GPK FWBuilder",
  "homepage": "https://github.com/darakuneko",
  "author": {
    "name": "darakuneko",
    "email": "tvkids@gmail.com"
  },
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@tailwindcss/vite": "^4.1.8",
    "@vitejs/plugin-react": "^4.5.1",
    "cross-env": "^7.0.3",
    "electron": "33.2.0",
    "electron-builder": "25.1.8",
    "eslint": "^9.28.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "rollup-plugin-visualizer": "^6.0.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.29.0"
  },
  "main": "./dist-electron/index.js",
  "dependencies": {
    "@electron/notarize": "2.5.0",
    "ansi-to-html": "0.7.2",
    "axios": "^1.9.0",
    "dotenv": "16.4.5",
    "electron-store": "10.0.0",
    "flowbite": "^2.5.2",
    "flowbite-react": "^0.10.2",
    "form-data": "4.0.1",
    "html-react-parser": "5.1.18",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-icons": "^5.5.0"
  },
  "build": {
    "productName": "GPK FWBuilder",
    "appId": "app.darakuneko.gpk_fwbuilder",
    "afterSign": "notarize.cjs",
    "npmRebuild": false,
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "icons/*",
      "package.json"
    ],
    "extraResources": [
      "gpk_fwmaker/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icons/512x512.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "category": "public.app-category.productivity",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "icons"
    }
  }
}
